article(ng-controller="HomePageCtrl"
  layout="column"
  layout-align="space-between"
  flex-offset="5"
  data-context-menu="partials/menus/context-home.html"
  style="height: 512px;")
  
  section(layout="row")
    podcast-panel(ng-repeat="podcast in podcasts track by $index"
      data-context-menu="partials/menus/podcast-select.html"
      ng-right-click="selectPodcast(podcast, $event)"
      ng-class="{ 'podcast-selected': podcast.selected }").no-select
      
    p(ng-show="podcasts.length < 1").md-body-1 You currently have no podcasts! Why don't you add one...?
    
  md-button(aria-label="Add Podcast" ng-click="openPodcastModal($event)" style="position: absolute; bottom: 40px; right: 40px;").md-fab.md-primary
    md-icon(md-font-library="material-icons") add
    md-tooltip Add Podcast
  
  include modals/add-podcast-modal
  include modals/share-podcast-modal
